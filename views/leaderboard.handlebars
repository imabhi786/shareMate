<div class="flexed">
	<div class="page">
	    <div>
			<div class="tab" style="float: right;" onclick="navigation()"><img src="images/bars.png" alt="alternative" height="30px"></div>
			<div style="float:right;margin-top:50px;margin-right:10px">Leaderboard</div>
			<div><img src="images/logo1.png" alt="alternative" height="150px"></div>
		</div>
		 <div id="navmenu" class="menu">
		    <a href="/request">
				<div class="menu-ele">
					Home
				</div>
			</a>
			<a href="/profile/{{currentUser}}">
				<div class="menu-ele">
					Your Profile
				</div>
			</a>
			<a href="/logout">
				<div class="menu-ele">
					Logout
				</div>
			</a>
		</div>
		 
		<div class="list">
			<!--works-->
			{{#if board}}
			<div id="collection" class="data-table" style="overflow-x: scroll;max-width:100%;" align="center"><br><br>
				<table>
					<thead>
						<tr>
							<th></th>
							<th>Name</th>
							<th>Email ID</th>
							<th>Points</th>
						</tr>
					</thead>
					<tbody>
					{{#each board}}
						<tr {{#headVal name ../currentUser}}class="active"{{/headVal}}>
							<td>{{plus @index 1}}</td>
							<td>{{name}}</td>
							<td>{{email}}</td>
							<td>{{points}}</td>
						</tr>
					{{/each}}
					</tbody>
				</table>
			</div>
			{{/if}}
		</div>
	</div>
</div>		